<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/stroke_gray_bottom"
    android:padding="20dp">

    <TextView
        android:id="@+id/certificate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자격증명"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/certificate_issuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="발급기관"
        android:textColor="@color/gray"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certificate_name" />

    <TextView
        android:id="@+id/certificate_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-01-11"
        android:textColor="@color/middle_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certificate_issuer" />


    <TextView
        android:id="@+id/delete_certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>